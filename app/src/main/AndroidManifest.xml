<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.exercise.health_exercise">

    <application
        android:name=".ExerciseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Health_exercise"
        tools:ignore="Instantiatable">
        <activity android:name=".SplashActivity"
            android:theme="@style/Theme.Health_exercise.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Health_exercise.NoActionBar">
        </activity>

        <activity android:name=".ui.activitys.ListAddActivity"
            android:theme="@style/Theme.Health_exercise.NoActionBar"/>

        <activity android:name=".ui.activitys.ExerciseDetailActivity"
            android:theme="@style/Theme.Health_exercise.NoActionBar"/>

        <activity android:name=".ui.activitys.ExerciseActivity"
            android:theme="@style/Theme.Health_exercise.NoActionBar"/>

        <activity android:name=".ui.activitys.ExerciseItemDetailActivity"
            android:theme="@style/Theme.Health_exercise.NoActionBar"/>

        <activity android:name=".ui.activitys.GuidePopupActivity"
            android:theme="@style/guideActivity"/>
    </application>

</manifest>