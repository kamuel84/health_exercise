<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivGuide_Close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_close_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tvCustom_SelectTitleLabel_Space1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvCustom_SelectTitleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="운동코드로 선택하는 방법"
            android:textColor="@color/color_white"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvCustom_SelectTitleLabel_Space2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvCustom_SelectContent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="1. 상단 입력칸에 운동코드를 입력합니다."
            android:textColor="@color/color_white"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvCustom_SelectContent11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="(카카오톡이나 SMS 문자 메시지를 복사한 운동코드를 붙여넣어도 됩니다.)"
            android:textColor="@color/color_white"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvCustom_SelectTitleLabel_Space3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvCustom_SelectContent2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="2. 우측 상단에 돋보기 버튼을 누릅니다."
            android:textColor="@color/color_ff0000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvCustom_SelectTitleLabel_Space4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvCustom_SelectContent3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="3. 입력된 운동들이 보이면 원하는 순서대로 운동카드를 누릅니다."
            android:textColor="@color/color_white"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvCustom_SelectTitleLabel_Space5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvCustom_SelectContent4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="4. 운동코드 예) GSHEW-FH,GSHEW-FV,..."
            android:textColor="@color/color_0091ff"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>